    public interface IApiClient{{_tag.name}}
    {
      {{#each paths}}
      {{setVar "path" @key}}
      {{#each this}}
      {{#ifEquals ../../_tag.name _tag.name}}
      {{#if summary}}
      /// <summary>
      /// {{summary}}
      /// </summary>
      {{/if}}
      {{#if description}}
      /// {{description}}
      {{/if}}
      {{#if tags}}
